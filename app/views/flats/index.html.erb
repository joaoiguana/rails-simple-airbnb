<div class="container">
  <h1 class="margin">All our flats</h1>
  <ul>
    <% @flats.each do |flat| %>
    <div class="card-deck d-inline-flex p-2">
      <div class="card margin margin-bottom" style="width: 18rem;">
        <%# <%= image_tag '' %>
        <%= image_tag("#{flat.poster_url}", class: 'poster')%>
        <div class="card-body">
          <%# <%= image_tag flat.poster_url %>
          <p class="card-text"><%= flat.name %></p>
          <p class="card-text"><%= flat.address %></p>
          <p class="card-text"><%= flat.price_per_night %>â‚¬. Guests: <%= flat.number_of_guests %></p>
          <p><%= link_to "More info", flat_path(flat) %>  <%= link_to "Edit", edit_flat_path(flat) %>  <%= link_to "Delete",
            flat_path(flat),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </ul>
</div>
